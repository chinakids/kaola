extends ./layout/layout

block content
  section.content
    div.row
      div.col-xs-12
        div.callout.callout-danger
          if debug
            h2 
              i.icon.fa.fa-ban
              |  #{error.status} - #{title}
            pre #{error.stack}
          else
            h2 
              i.icon.fa.fa-ban
              |  #{title}
