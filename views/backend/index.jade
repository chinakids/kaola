block content
  include ./layout/breadcrumbNav
  section.content(ng-controller='MainPanelCtrl')
    div.col-md-12
      div.box.box-solid
        div.box-header.with-border
          h5.box-title #{title}
        div.box-body
          div.row
            div.col-lg-3.col-xs-6
              div.small-box.bg-aqua
                div.inner
                  h3 232
                div.icon
                  i.fa.fa-fw.fa-file-image-o
                a.small-box-footer(href='javascrit:;') 商品
            div.col-lg-3.col-xs-6
              div.small-box.bg-yellow
                div.inner
                  h3 2323
                div.icon
                  i.fa.fa-fw.fa-file-text-o
                a.small-box-footer(href='javascrit:;') 文章
            div.col-lg-3.col-xs-6
              div.small-box.bg-green
                div.inner
                  h3 323
                div.icon
                  i.fa.fa-fw.fa-users
                a.small-box-footer(href='javascrit:;') 用户
            div.col-lg-3.col-xs-6
              div.small-box.bg-red
                div.inner
                  h3 32
                div.icon
                  i.fa.fa-fw.fa-comments-o
                a.small-box-footer(href='javascrit:;') 留言
