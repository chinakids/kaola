extends ./layout/common

block layout
  body.login-page
    .login-box
      .login-logo
        a(href='/')
          b Kaola 
          |  CMS
      .login-box-body
        p.login-box-msg 请输入帐号密码登陆
        form#login
          .form-group.has-feedback
            input.form-control(type='email',name='email',placeholder='邮箱')
            span.glyphicon.glyphicon-user.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='password',name='password',placeholder='密码')
            span.glyphicon.glyphicon-lock.form-control-feedback
          .form-group.has-feedback.clearfix
            .col-xs-8(style='margin-left: 0;padding: 0;')
              input.form-control(type='text',name='code',placeholder='请输入验证码')
            .col-xs-4(style='margin-left: 0;padding: 0;overflow:hidden')
              img#code(src='/api/securityCode',style='width:100%;height: 34px;border: 1px solid #ccc;border-left:none',title='点击刷新验证码')
          .form-group.has-feedback#tip
          .form-group.has-feedback
            button.btn.btn-primary.btn-block.btn-flat(type='button',name='submit')  登 陆
    script.
      $(function(){
        $("#code").attr('src','/api/securityCode?'+Date.parse(new Date())).click(function(){
          $(this).attr('src','/api/securityCode?'+Date.parse(new Date()))
        });
      })
